default_platform(:ios)

platform :ios do
    desc "Description of what the lane does"

    lane :custom_lane do
        # add actions here: https://docs.fastlane.tools/actions
    end

    desc "Testing"

    lane :tests do
        run_tests(
            workspace: "KarrosTech.xcworkspace",
            scheme: "KarrosTech",
            devices: ["iPhone 6s", "iPad Air"]
        )
    end

    lane :register_app do
        produce(
            username: "tcthanh1992@gmail.com",
            app_identifier: "com.gmail.tcthanh1992.KarrosTech.Sample",
            app_name: "KarrosTech",
            team_name: "Tran Cong Thanh",
            itc_team_name: "Tran Cong Thanh",
