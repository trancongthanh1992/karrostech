    end

    lane :get_dev_certs do
        cert(development: true, adhoc: true)
        sigh(development: true, adhoc: true)
    end

    lane :sync_all_development do
        sync_device_info()
        match(type: "development")
        match(type: "adhoc")
        # match(type: "appstore")
    end

    lane :sync_device_info do
        # register_devices(devices_file: "./fastlane/devices-ios.txt")
    end
